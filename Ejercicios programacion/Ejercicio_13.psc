Algoritmo Ejercicio_13
	
	Definir base, altura Como Real;
	
	Escribir "Introduce una base";
	Leer base;
	
	Escribir "Introduce una altura";
	Leer altura;
	
	Escribir "La superficie del rectángulo es: ", base * altura;
	Escribir "El perímetro del rectángulo es: ", 2 * (base + altura);
	
FinAlgoritmo
